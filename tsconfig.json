{
    "compilerOptions": {
        "target": "es5"
        ,"module": "amd"
        ,"moduleResolution": "classic"
        ,"outFile": "./dist/outfile.js"
        ,"outDir" : "./dist"
        ,"experimentalDecorators": true
        ,"noImplicitAny":true		
        ,"sourceMap": false        
		,"declaration": false
		,"removeComments":true
		,"noEmitHelpers":true 
		,"suppressImplicitAnyIndexErrors": true
    },
    "files" : [

    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
		,"dist"
    ],
    "compileOnSave": false
}
